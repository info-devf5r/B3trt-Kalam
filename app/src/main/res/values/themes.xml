<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PremiumQuotesAppCreatedByYMGDevelopers"
        parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="fontFamily">@font/bold</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>


    <style name="Menu_text" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@font/regular</item>
    </style>

    <style name="Menu_icon" parent="Theme.PremiumQuotesAppCreatedByYMGDevelopers">
        <item name="iconTint">@color/black</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="DialogCustomTheme" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>


    <style name="ToolbarThemeSearch" parent="Theme.PremiumQuotesAppCreatedByYMGDevelopers">

        <item name="colorControlNormal">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.PremiumQuotesAppCreatedByYMGDevelopers.AdAttribution">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">#ffcc66</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Ad</item>
        <item name="android:height">15dp</item>
        <item name="android:width">15dp</item>
    </style>


    <style name="Theme.PremiumQuotesAppCreatedByYMGDevelopers.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PremiumQuotesAppCreatedByYMGDevelopers.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PremiumQuotesAppCreatedByYMGDevelopers.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>